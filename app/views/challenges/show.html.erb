<p id="notice"><%= notice %></p>

<h3><%= @challenge.name %></h3>

<div>
  <%= @challenge.description %>
</div>

<p>&nbsp;</p>

<h4>Problems</h4>

<table class="table">

  <tr>
    <td>Name</td>
    <td>Description</td>
    <td></td>
  </tr>

  <% @challenge.problems.each do |problem| %>
  <tr>
    <td><%= problem.name %></td>
    <td><%= problem.short_description %></td>
    <td><%= button_to 'View problem', problem_path(problem), :method=>"get", :class=>"btn btn-default" %></td>
  </tr>
  <% end %>
  
</table>

<%= button_to 'New problem', new_challenge_problem_path(@challenge), :method=>"get", :class=>"btn btn-default"  %> 
<%= button_to 'Edit', edit_challenge_path(@challenge), :method=>"get", :class=>"btn btn-default"  %> 
<%= button_to 'Back', challenges_path, :method=>"get", :class=>"btn btn-default"  %>
