<%= form_for([@problem, @submission]) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel panel-default">
  <div>
    <%= collection_select(:submission, :language_id, @language, :id, :name) %>
    <%= f.submit "Send code", :class=>"btn btn-primary" %>
  </div>
  <div id="submission_status">
    <span id="submission_status_text"></span>
    <img id="submission_status_image"/>
  </div>

  <div>
    <%= f.text_area :code, :size=>"500x20" %>
  </div>
</div>

<% end %>
