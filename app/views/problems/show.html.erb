<p id="notice"><%= notice %></p>

<h2><%= @problem.name %></h2>

<ul class="nav nav-tabs" id="problem_tabs">
  <li class= "active"><a href="#problem">Problem</a></li>
  <li><a href="#submission">Submissions</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="problem">
    <%= markdown(@problem.long_description) %>
    <%= render 'submissions/form' %>
  </div>
   <div class="tab-pane" id="submission">
      <%= render :template=> 'submission_results/index' %>
   </div>
</div>


<% if current_user.admin? %>
  <%= link_to "Show submissions", problem_submissions_path(@problem), :class=>"btn btn-default" %>
  <%= link_to "New test case", new_problem_test_case_path(@problem), :class=>"btn btn-default" %>
  <%= link_to "Edit", edit_problem_path(@problem), :class=>"btn btn-default" %>
  <%= link_to "Back", challenge_problems_path(@problem), :class=>"btn btn-default" %>
<% end %>
